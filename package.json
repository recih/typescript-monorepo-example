{
  "name": "typescript-monorepo-example",
  "version": "1.0.0",
  "description": "An example typescript monorepo",
  "scripts": {
    "prepublish": "pnpm build",
    "verify": "pnpm -r --filter=./packages run verify",
    "prettier": "pnpm -r --filter=./packages run prettier",
    "build": "pnpm -r --filter=./packages build",
    "test": "cross-env NODE_ENV=development pnpm -r --filter=./packages test"
  },
  "author": "@CryogenicPlanet",
  "license": "ISC",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "pnpm prettier",
      "pre-push": "pnpm verify"
    }
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.13.12",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-prettier-standard": "^4.0.1",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prettier-config-standard": "^4.0.0",
    "ts-jest": "^27.0.7",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^4.4.4",
    "wait-on": "^6.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
